---
interface Props {
	title: string;
    highlighted: string;
    description: string;
}

const { title, highlighted, description } = Astro.props;
---

<h1 class="mb-4 text-center text-3xl font-extrabold text-slate-700 dark:text-white md:text-5xl lg:text-6xl">
    {title}
    <span class="text-transparent bg-clip-text bg-gradient-to-r to-emerald-600 from-sky-400">{highlighted}</span>.
 </h1>
<p class="text-lg text-center font-normal text-gray-500 lg:text-xl dark:text-gray-400">{description}</p>


