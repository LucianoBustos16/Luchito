---
import Card from '../components/Card.astro';
import data from '../../db/contenido.json';

// Ordena los objetos en 'data' en funciÃ³n del campo 'name'
data.sort((a, b) => a.name.localeCompare(b.name));

---

<ul role="list" class="columns-1 md:columns-2 lg:columns-3 gap-4" id="card-list">
	{data.map(({ name, description, link, category, id }) => (
	<li class="link-card duration-500 transition-transform   mb-4" data-category={category}>
	  
		<Card
			href={link}
			title={name}
			body={description}
			category={category}
			id={id}
		/>
	</li>
	))}
	
</ul>




